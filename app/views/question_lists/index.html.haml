.container-fluid

.row
  .col-sm-2.col-md-3.col-lg-3{:style => "background-color:white;"}
    %ul.list-inline
      %li
        = link_to t('actions.create'), new_question_list_path, class: 'btn btn-primary'
      %li 
        %h4{:class => "vcenter", :style => "color:black;margin-left:1px;"}= QuestionList.model_name.human
  .col-sm-4.col-md-4.col-lg-4{:style => "background-color:white;"}
    = search_form_for @q, class: 'search-form ' do |f|
      .input-group
        = f.search_field :name_cont, class: 'form-control'
        %span.input-group-btn
          %button.btn.btn-primary
            %i.fa.fa-search    

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    %a{:href => "#"} Search-2(ComingSoon)

  .col-sm-2.col-md-2.col-lg-2{:style => "background-color:white;"}
    = page_entries_info @question_lists, :entry_name => 'item'
            
= paginate @question_lists
    
 
%table.table.table-striped
  %thead
    %tr
      %th
      %th
      %th= sort_link(@q, :name, QuestionList.human_attribute_name(:name))
      %th= sort_link(@q, :sort, QuestionList.human_attribute_name(:sort))
      %th= sort_link(@q, :active_status, QuestionList.human_attribute_name(:active_status))

  %tbody
    - @question_lists.each do |question_list|
      %tr
        %td= link_to t('actions.show'), question_list, class: 'btn btn-primary'
        %td= link_to t('actions.edit'), edit_question_list_path(question_list)
        %td= question_list.name
        %td= question_list.sort
        %td= question_list.active_status

= paginate @question_lists
